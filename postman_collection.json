        {
          "name": "Create Poll",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"creatorWallet\": \"0x1234567890123456789012345678901234567890\",\n  \"title\": \"Test Poll\",\n  \"description\": \"Test Description\",\n  \"candidates\": [\n    { \"id\": \"1\", \"label\": \"Candidate 1\" },\n    { \"id\": \"2\", \"label\": \"Candidate 2\" }\n  ],\n  \"startTime\": \"2024-01-01T00:00:00Z\",\n  \"endTime\": \"2024-01-02T00:00:00Z\"\n}"
